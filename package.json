{
  "name": "adven-ts",
  "type": "module",
  "version": "2.0.0",
  "description": "Project template for Advent of Code challenges in TypeScript",
  "main": "index.ts",
  "scripts": {
    "start": "tsx ./src/index.ts",
    "watch": "nodemon ./src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "generate": "tsc --noEmit && node --loader ts-node/esm ./src/template/generateYear.ts",
    "scoreboard": "tsx ./src/utils/scoreboard/scoreboard.ts",
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neon-inkblast/AdventOfCode-TS.git"
  },
  "keywords": [
    "AoC",
    "Advent",
    "of",
    "Code",
    "Typescript",
    "2022",
    "2023"
  ],
  "author": "Ben Atkinson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neon-inkblast/AdventOfCode-TS/issues"
  },
  "homepage": "https://github.com/neon-inkblast/AdventOfCode-TS#readme",
  "devDependencies": {
    "@types/color-convert": "^2.0.4",
    "@types/node": "^20.17.9",
    "@types/yargs": "^17.0.33",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.1",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "color-convert": "^2.0.1",
    "pretty-ms": "^9.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "yargs": "^17.7.2"
  }
}
